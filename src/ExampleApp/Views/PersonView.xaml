<catel:UserControl x:Class="ExampleApp.Views.PersonView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:catel="http://schemas.catelproject.com">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Content="{Binding FirstName}" />
        <Label Grid.Row="1" Content="{Binding FamilyName}" />
        <Label Grid.Row="2" Content="{Binding NonExistingProperty}" />
        <Rectangle Grid.Row="3" HorizontalAlignment="Stretch" Fill="Gray" Height="2" />
    </Grid>
    
</catel:UserControl>
